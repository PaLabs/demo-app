{% extends 'layout/base.html.twig' %}

{% block body %}
    <header class="main-header">

        <a href="{{ path('main_page') }}" class="logo">
            <span class="logo-mini"><b>Pa</b>l</span>
            <span class="logo-lg">ProjectAlpha Labs</span>
        </a>

        <nav class="navbar navbar-static-top" role="navigation">
            <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>
        </nav>
    </header>

    <aside class="main-sidebar">

        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <ul class="sidebar-menu">
                <li class="header">Menu</li>
                <li>
                    <a href="{{ path('car_list') }}">Cars</a>
                </li>
                <li>
                    <a href="{{ path('engine_list') }}">Engines</a>
                </li>
                <li>
                    <a href="{{ path('colors_list') }}">Colors</a>
                </li>
                <li>
                    <a href="{{ path('country_list') }}">Country</a>
                </li>
            </ul>

            <ul class="sidebar-menu">
                <li class="header">Github</li>
                <li>
                    <a href="{{ path('github_repos_search') }}">Repos search</a>
                </li>
            </ul>
        </section>
    </aside>

    <div class="content-wrapper">

        {% block content_header %}
            <section class="content-header">
                <h1>{% block content_header_title %}
                        {{ block('title') }}
                    {% endblock %}
                </h1>
            </section>
        {% endblock %}

        <section class="content container-fluid">
            {% block content %}{% endblock %}
        </section>
    </div>

{% endblock %}